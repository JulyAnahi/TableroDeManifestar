<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Registro</title>
  <%- include("partials/head") %>

</head>
<body>
  <h2>Registro</h2>
  <body class="bg-light d-flex align-items-center justify-content-center vh-100">

    <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
      <h3 class="text-center mb-4">Registro</h3>
      <form id="registerForm">
        <div class="mb-3">
          <label for="email" class="form-label">Correo electr칩nico</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="usuario@example.com" required />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Contrase침a</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Contrase침a" required />
        </div>
        <button type="submit" class="btn btn-success w-100">Registrarse</button>
      </form>
    </div>

  <script>
    document.getElementById('registerForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = e.target.email.value;
      const password = e.target.password.value;

      const res = await fetch('/api/auth/register', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, password })
      });

      if (res.ok) {
        alert('Registro exitoso. Iniciando sesi칩n...');
        window.location.href = '/login';
      } else {
        alert('Error al registrar');
      }
    });
  </script>
</body>
</html>